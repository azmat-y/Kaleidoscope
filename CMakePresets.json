{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "debug",
      "displayName": "Clang",
	"inherits": "base",
      "description": "Debug build options for GCC",
      "cacheVariables": {
          "CMAKE_CXX_FLAGS": "-g3 -O0 -I/usr/include -std=c++17 -fno-exceptions -funwind-tables -fno-omit-frame-pointer -D_GNU_SOURCE -D__STDC_CONSTANT_MACROS -D__STDC_FORMAT_MACROS -D__STDC_LIMIT_MACROS -L/usr/lib64 -lLLVM-17",
	  "CMAKE_CXX_COMPILER": "clang++",
	  "CMAKE_EXPORT_COMPILE_COMMANDS" : "1"
      }
    },
    {
      "name": "release",
      "displayName": "Clang",
      "description": "Release build options",
	"inherits": "base",
      "cacheVariables": {
          "CMAKE_CXX_FLAGS": "-O3 -I/usr/include -std=c++17   -fno-exceptions -funwind-tables -D_GNU_SOURCE -D__STDC_CONSTANT_MACROS -D__STDC_FORMAT_MACROS -D__STDC_LIMIT_MACROS -L/usr/lib64 -lLLVM-17 ",
	  "CMAKE_CXX_COMPILER": "clang++",
	  "CMAKE_EXPORT_COMPILE_COMMANDS" : "1"
      }
    }
  ]
}
